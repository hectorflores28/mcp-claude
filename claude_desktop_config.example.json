{
    "version": "1.1.0",
    "api": {
        "base_url": "http://localhost:8000",
        "timeout": 30,
        "retry_attempts": 3,
        "retry_delay": 1
    },
    "auth": {
        "api_key": "your-api-key-here",
        "jwt_secret": "your-jwt-secret-here",
        "token_expiry": 3600
    },
    "claude": {
        "api_key": "your-claude-api-key-here",
        "model": "claude-3-opus-20240229",
        "max_tokens": 4096,
        "temperature": 0.7
    },
    "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 0,
        "password": null,
        "ssl": false
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "file": "logs/claude-desktop.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "plugins": {
        "enabled": true,
        "directory": "plugins",
        "auto_reload": true
    },
    "security": {
        "cors_origins": ["http://localhost:3000"],
        "rate_limit": {
            "enabled": true,
            "requests_per_minute": 60
        }
    }
} 